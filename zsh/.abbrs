# ---- Git ----
abbr add --force --quiet g="git"
abbr add --force --quiet "gst"="git status"
abbr add --force --quiet "gcm"="git commit -m \"%\""
abbr add --force --quiet "gc"="git checkout"
abbr add --force --quiet "gcb"="git checkout -b"

# ---- List ----
if type "eza" > /dev/null; then
    abbr add --force --quiet l="eza -la"
    abbr add --force --quiet lt="eza --tree --level %"
else
    abbr add --force --quiet l="ls -laH"
fi
